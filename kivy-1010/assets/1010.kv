#:import get_color_from_hex kivy.utils.get_color_from_hex

<Label>
    canvas.before:
        Color:
            rgba: get_color_from_hex('E2DDD5')
        Rectangle:
            pos: self.pos
            size: self.size
    index: root.index

<Image>
    index: root.index

<Kivy1010>
    cols: 1
    rows: 3
    padding: 20, 10, 20, 10
    board: board
    coming: coming
    comingLeft: comingLeft
    comingMid: comingMid
    comingRight: comingRight

    GridLayout:
        cols: 2
        rows: 1
        size_hint: 1, None
        height: 50
        Label:
            text: 'Score:'
            color: get_color_from_hex('58CB85')
            bold: True
            size_hint: 1, None
            height: 50
            pos: 10, 540
            font_size: 20
            text_size: self.width, None
            halign: 'right'
        Label:
            text: '%s'%str(root.score)
            color: get_color_from_hex('58CB85')
            bold: True
            size_hint: 1, None
            height: 50
            pos: 10, 540
            font_size: 20
            text_size: self.width, None
            halign: 'left'

    GridLayout:
        id: board
        cols: 10
        rows: 10
        spacing: 3, 3
        padding: 80, 10, 0, 0
        do_translation_x: False
        do_translation_y: False

    FloatLayout:
        size_hint: 1, 0.5
        id: coming
        CustomScatter:
            id: comingLeft
            size_hint: None, None
            pos: 25, 70
            pre_pos: 25, 70

        CustomScatter:
            id: comingMid
            size_hint: None, None
            pos: 195, 70
            pre_pos: 195, 70

        CustomScatter:
            id: comingRight
            size_hint: None, None
            pos: 365, 70
            pre_pos: 365, 70
