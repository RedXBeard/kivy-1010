#:import get_color_from_hex kivy.utils.get_color_from_hex

<Label>
    canvas.before:
        Color:
            rgba: get_color_from_hex('E2DDD5')
        Rectangle:
            pos: self.pos
            size: self.size

<Kivy1010>
    cols: 1
    rows: 2
    padding: 20, 10, 20, 10
    board: board
    comingLeft: comingLeft
    comingMid: comingMid
    comingRight: comingRight

    GridLayout:
        id: board
        cols: 10
        rows: 10
        spacing: 3, 3
        padding: 80, 50, 0, 0
        do_translation_x: False
        do_translation_y: False

    FloatLayout:
        size_hint: 1, 0.5
        canvas.before:
            Color:
                rgba: 1,1,1,1
            Rectangle:
                pos: self.pos[0], self.pos[1]
                size: self.size
        Scatter:
            canvas.before:
                Color:
                    rgba: get_color_from_hex('E2DDD5')
                Rectangle:
                    pos: self.pos
                    size: self.size
            id: comingLeft
            size_hint: None, None
            pos: 20, 70

        Scatter:
            canvas.before:
                Color:
                    rgba: get_color_from_hex('E2DDD5')
                Rectangle:
                    pos: self.pos
                    size: self.size
            id: comingMid
            size_hint: None, None
            pos: 190, 70

        Scatter:
            canvas.before:
                Color:
                    rgba: get_color_from_hex('E2DDD5')
                Rectangle:
                    pos: self.pos
                    size: self.size
            id: comingRight
            size_hint: None, None
            pos: 360, 70
